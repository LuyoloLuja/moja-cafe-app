    <form action="/waiter" method="post">
        <div class="container">
                <div class="content">
                    <h1>Moja Cafe'</h1>
                    <label for=""><input type="text" name="username" placeholder="Please Enter Your Name"
                                         value="{{name}}"></label>
                    <table>
                        <tr>
                            <td><input type="checkbox" name="day" value="Monday">Monday</td>
                            <td><input type="checkbox" name="day" value="Tuesday">Tuesday</td>
                            <td><input type="checkbox" name="day" value="Wednesday">Wednesday</td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" name="day" value="Thursday">Thursday</td>
                            <td><input type="checkbox" name="day" value="Friday">Friday</td>
                            <td><input type="checkbox" name="day" value="Saturday">Saturday</td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" name="day" value="Sunday">Sunday</td>
                            <td colspan="2"><button type="submit" name="addBtn">Submit</button></td>
                        </tr>
                    </table>
                </div>
        </div>
